// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// 1
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2
generator client {
  provider = "prisma-client-js"
}

// 3
model Post {
  id          String      @id @default(uuid())   // 4
  createdAt   DateTime    @default(now())  // 5
  description String
  url         String
  postedBy    User?       @relation(name: "PostedBy", fields: [postedById], references: [id])  // 2
  postedById  String?
  voters      User[]      @relation(name: "Votes")  // 1
}

model User {
  id        String      @id @default(uuid())
  name      String      @unique
  email     String      @unique
  password  String
  banned    Boolean     @default(false)
  banReason String?
  posts     Post[]      @relation(name: "PostedBy")  // 2
  votes     Post[]      @relation(name: "Votes")  // 1
}